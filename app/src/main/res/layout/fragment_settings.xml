<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.SettingsFragment">

    <TextView style = "@style/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Share and Rate WhyGoSolo"
        android:id="@+id/shareAndRate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Share WhyGoSolo"
        android:id="@+id/share"
        android:layout_below="@+id/shareAndRate"
        android:layout_alignLeft="@+id/shareAndRate"
        android:layout_alignStart="@+id/shareAndRate"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rate WhyGoSolo"
        android:id="@+id/rate"
        android:layout_below="@+id/share"
        android:layout_alignLeft="@+id/share"
        android:layout_alignStart="@+id/share"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

    <View android:id="@+id/division1"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#919191"
        android:layout_below="@+id/rate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView style = "@style/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Legal"
        android:id="@+id/legal"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/helpAndSettings"
        android:layout_alignLeft="@+id/helpAndSettings"
        android:layout_alignStart="@+id/helpAndSettings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WhyGoSolo App Tutorial"
        android:id="@+id/tutorial"
        android:layout_below="@+id/helpAndSettings"
        android:layout_alignLeft="@+id/helpAndSettings"
        android:layout_alignStart="@+id/helpAndSettings"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Getting Help/Contact Us"
        android:id="@+id/help_contact"
        android:layout_below="@+id/tutorial"
        android:layout_alignLeft="@+id/tutorial"
        android:layout_alignStart="@+id/tutorial"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rules and Info"
        android:id="@+id/rules"
        android:layout_below="@+id/help_contact"
        android:layout_alignLeft="@+id/help_contact"
        android:layout_alignStart="@+id/help_contact"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Privacy Policy"
        android:id="@+id/privacy"
        android:layout_below="@+id/terms"
        android:layout_alignLeft="@+id/rules"
        android:layout_alignStart="@+id/rules"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="privacyInfo"/>

    <View android:id="@+id/division2"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#919191"
        android:layout_below="@+id/rules"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView style = "@style/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Help and Settings"
        android:id="@+id/helpAndSettings"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/rate"
        android:layout_alignLeft="@+id/rate"
        android:layout_alignStart="@+id/rate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Help"
        android:id="@+id/help"
        android:layout_below="@+id/legal"
        android:layout_alignLeft="@+id/legal"
        android:layout_alignStart="@+id/legal"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Safety Tips"
        android:id="@+id/safety"
        android:layout_below="@+id/help"
        android:layout_alignLeft="@+id/terms"
        android:layout_alignStart="@+id/terms"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="safetyInfo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Terms of Service"
        android:id="@+id/terms"
        android:layout_below="@+id/safety"
        android:layout_alignRight="@+id/rate"
        android:layout_alignEnd="@+id/rate"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

    <View android:id="@+id/division3"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#919191"
        android:layout_below="@+id/privacy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Logout"
        android:id="@+id/logout"
        android:clickable="true"
        android:layout_below="@+id/division3"
        android:layout_toRightOf="@+id/help"
        android:layout_toEndOf="@+id/help"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="logout"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_power_off"
        android:src="@drawable/ic_button_power"
        android:layout_alignBottom="@+id/logout"
        android:layout_toLeftOf="@+id/logout"
        android:layout_toStartOf="@+id/logout" />

</RelativeLayout>
