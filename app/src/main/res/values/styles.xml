<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colour_primary</item>
        <item name="colorPrimaryDark">@color/colour_primary_dark</item>
        <item name="colorAccent">@color/colour_accent</item>
    </style>


    <!-- Styles used on the login & register activity -->
    <dimen name="buttonHeight">50dp</dimen>
    <dimen name="buttonWidth">200dp</dimen>

    <style name="text_login">
        <item name="android:layout_marginLeft">@dimen/text_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/text_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/text_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:background">@android:drawable/edit_text</item>
    </style>


    <style name="text_search_box">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <style name="button_sign_in" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/generic_white</item>
    </style>

    <style name="button_generic" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/secondary_blue_light</item>

        <item name="colorAccent">@color/core_blue</item>
        <item name="colorButtonNormal">@color/core_blue</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:width">@dimen/buttonWidth</item>
        <item name="android:height">@dimen/buttonHeight</item>
    </style>

    <!-- Style used on the main tab activity -->
    <style name="tab_layout_style" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/generic_black</item>
        <item name="tabIndicatorHeight">@dimen/tabs_indicator_height</item>
        <item name="tabIndicatorColor">@color/generic_black</item>
        <item name="tabTextAppearance">@style/tab_text_style</item>
    </style>

    <!-- We don't use tabs text so all this is irrelevent and should be removed -->
    <style name="tab_text_style" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/generic_white</item>
        <item name="textAllCaps">true</item>
        ...
    </style>

    <!-- Style used on the main tab activity -->
    <style name="fab_style">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:clickable">true</item>
        <item name="colorAccent">@color/colour_accent</item>
    </style>

    <style name="fab_small_style">
        <item name="android:layout_width">@dimen/fab_size_small</item>
        <item name="android:layout_height">@dimen/fab_size_small</item>
        <item name="android:layout_margin">@dimen/fab_margin_small</item>
        <item name="android:clickable">true</item>
        <item name="colorAccent">@color/colour_accent</item>
    </style>

    <!-- Styles used on the login activity -->
    <style name="text_title">
        <item name="android:layout_marginLeft">@dimen/text_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/text_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/text_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/core_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Styles used on the login activity -->
    <style name="paragraph">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/generic_black</item>
    </style>

    <!-- Styles used on the create beacon activity -->
    <style name="header">
        <item name="android:textColor">@color/core_blue</item>
        <item name="android:textSize">26sp</item>
    </style>
</resources>
